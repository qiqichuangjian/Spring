<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!-- bean注入  -->
    <bean id="dog" class="com.entity.Dog" p:name="旺财"></bean>
    <bean id="person1" class="com.entity.Person" >
        <property name="name" value="zhangsan1"></property>
        <property name="age" value="10"></property>
        <property name="dog" ref="dog" ></property>
    </bean>
    <!-- 内部bean注入-->
    <bean id="person2" class="com.entity.Person" >
        <property name="name" value="zhangsan2"></property>
        <property name="age" value="12"></property>
        <property name="dog" >
            <bean id="dog" class="com.entity.Dog" p:name="逗逗"></bean>
        </property>
    </bean>
    <!-- 注入null -->
    <bean id="person3" class="com.entity.Person" >
        <property name="name" value="zhangsan2"></property>
        <property name="age" value="12"></property>
        <property name="dog"  >
            <null></null>
        </property>
    </bean>
    <!-- 级联注入：必须先创建对象 -->
    <bean id="person4" class="com.entity.Person" >
        <property name="name" value="zhangsan2"></property>
        <property name="age" value="12"></property>
        <property name="dog.name" value="花猪"  >
        </property>
    </bean>
    <!-- 集合 -->
    <bean id="person5" class="com.entity.Person" >
        <property name="name" value="zhangsan2"></property>
        <property name="age" value="12"></property>
        <property name="addr">
            <list>
                <value>太原小店</value>
                <value>太原迎泽</value>
                <value>太原西山</value>
                <value>太原西山</value>
            </list>
        </property>
    </bean>
    <bean id="person6" class="com.entity.Person" >
        <property name="name" value="zhangsan2"></property>
        <property name="age" value="12"></property>
        <!--set会把重复的去掉-->
        <property name="love">
            <set>
                <value>太原小店</value>
                <value>太原迎泽</value>
                <value>太原西山</value>
                <value>太原西山</value>
            </set>
        </property>
    </bean>
    <bean id="person7" class="com.entity.Person" >
        <property name="name" value="zhangsan2"></property>
        <property name="age" value="12"></property>
        <property name="address">
            <!--key值不能重复，所以没有山东-青岛-->
            <map>
                <entry>
                    <key><value>山西</value></key>
                    <value>太原</value>
                </entry>
                <entry>
                    <key><value>山东</value></key>
                    <value>青岛</value>
                </entry>
                <entry>
                    <key><value>山东</value></key>
                    <value>烟台</value>
                </entry>
            </map>
        </property>
    </bean>
    <bean id="person8" class="com.entity.Person" >
        <property name="name" value="zhangsan2"></property>
        <property name="age" value="12"></property>
        <property name="properties">
           <props>
               <prop key="driverClassName" >com.mysql.jdbc.Driver</prop>
               <prop key="jdbcUrl" >jdbc:mysql://192.168.1.1:3306/test</prop>
               <prop key="username" >root</prop>
           </props>
        </property>
    </bean>


</beans>